function st() {
  git branch &>/dev/null
  if [ $? -eq 0 ]; then
    git status;
  else
    svn status;
  fi
}

function ci() {
  git branch &>/dev/null
  if [ $? -eq 0 ]; then
    git commit -m;
  else
    svn ci -m;
  fi
}

