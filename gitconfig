[user]
	name = Xavier Shay
	email = xavier@rhnh.net

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = /Users/xavier/.gitignore
[alias]
	sh = !git-sh
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  pl = pull --rebase
  up = !sh -c 'git pull --rebase && git log --pretty=format:\"%Cred%ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
  
[svn]
  rmdir = true
