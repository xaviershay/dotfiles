[user]
	name = Xavier Shay
	email = xavier@rhnh.net

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	excludesfile = /Users/xavier/.gitignore
[alias]
  l = log --graph --abbrev-commit --date=relative
  r = !git l -20
  ra = !git r --all
  noff = merge --no-ff
  amend = commit --amend
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[svn]
  rmdir = true
[help]
  autocorrect = 1
